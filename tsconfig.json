{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "src"
  },
  "include": [
    "src/index.ts",
    "./**/*.ts"
  ],
  "exclude": ["node_modules", "scripts"]
}