{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": [
    "./**/*.ts",
    "globals.d.ts"
  ],
  "exclude": ["node_modules", "scripts"]
}